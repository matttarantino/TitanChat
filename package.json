{
  "name": "cs554-project-titan",
  "version": "1.0.0",
  "main": "./server/build/app.js",
  "repository": "https://github.com/matttarantino/CS554-Project-Titan.git",
  "license": "MIT",
  "scripts": {
    "start": "node ./server/build/app.js",
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
    "dev:server": "ts-node-dev --files ./server/src/app.ts",
    "dev:client": "yarn --cwd client --max-old-space-size=8192 start",
    "build": "yarn --cwd client install && yarn --cwd client build && yarn --cwd ./ build:server",
    "build:server": "cd server && tsc",
    "build:client": "yarn --cwd client build",
    "lint": "eslint --fix --ext .tsx,.ts,.html,.json && prettier --write \"**/*.{tsx,ts,scss,html,json}\" && stylelint --fix --allow-empty-input **/*.scss",
    "pre-commit": "lint-staged --quiet",
    "prepare": "husky install",
    "seed": "ts-node --files ./server/tasks/seed.ts"
  },
  "lint-staged": {
    "**/*.{tsx,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.12.1",
    "socket.io": "^4.5.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.26",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.29.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "stylelint": "^14.16.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
